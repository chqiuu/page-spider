{
  "manifest_version": 3,
  "name": "页面爬虫工具",
  "version": "1.0.0",
  "description": "一个用于爬取指定网站数据的浏览器扩展工具",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://search.ccgp.gov.cn/*",
    "https://www.ccgp-sichuan.gov.cn/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://search.ccgp.gov.cn/*",
        "https://www.ccgp-sichuan.gov.cn/*"
      ],
      "js": [
        "siteRules/BaseSiteRule.js",
        "siteRules/CcgpGovRule.js",
        "siteRules/CcgpSichuanRule.js",
        "siteRules/index.js",
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

